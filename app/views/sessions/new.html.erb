
<div class="row well">
	<div class="col-md-6">
    <h1>Login</h1>
  
  	<%= form_tag sessions_path, html: {class: 'form col-md-6 center-block'} do %>
        <div class="form-group">
        	<%= text_field_tag :email, params[:email],
        	 class: 'form-control input-lg' %>
        </div>
        <div class="form-group">
        	 <%= password_field_tag :password, '',
        	  class: 'form-control input-lg' %>
        </div>
        <div class="form-group">
        	<%= submit_tag "Log in", class: 'btn btn-primary btn-lg btn-block' %>
        </div>
    <% end %>
  </div>
</div>